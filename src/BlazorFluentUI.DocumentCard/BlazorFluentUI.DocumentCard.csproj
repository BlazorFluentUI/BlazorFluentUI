<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<AssemblyName>BlazorFluentUI.DocumentCard</AssemblyName>
		<Description>DocumentCard component from Blazor port of Fluent UI React library</Description>
		<RootNamespace>BlazorFluentUI</RootNamespace>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
	</PropertyGroup>

	<ItemGroup>
		<Content Remove="tsconfig.json" />
		<Content Remove="wwwroot\documentCard.ts" />
	</ItemGroup>

	<ItemGroup>
		<None Include="wwwroot\documentCard.ts" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0.3" />
		<PackageReference Include="Microsoft.TypeScript.MSBuild" Version="4.2.2">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\BlazorFluentUI.BaseComponent\BlazorFluentUI.BaseComponent.csproj" />
		<ProjectReference Include="..\BlazorFluentUI.Button\BlazorFluentUI.Button.csproj" />
		<ProjectReference Include="..\BlazorFluentUI.Icon\BlazorFluentUI.Icon.csproj" />
		<ProjectReference Include="..\BlazorFluentUI.Link\BlazorFluentUI.Link.csproj" />
		<ProjectReference Include="..\BlazorFluentUI.Persona\BlazorFluentUI.Persona.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <TypeScriptCompile Include="tsconfig.json">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </TypeScriptCompile>
	</ItemGroup>

</Project>
