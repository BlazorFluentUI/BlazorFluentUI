@namespace FluentUI
@inherits FluentUIComponentBase

@if (string.IsNullOrEmpty(AriaLabel))
{
<i data-icon-name=@IconName
   class=@($"ms-Icon{(string.IsNullOrEmpty(IconName) ? " ms-Icon-placeholder" : "")}{(string.IsNullOrEmpty(ClassName) ? "" : " " + ClassName)}")
   style="font-family: FabricMDL2Icons"
   role="presentation"
   aria-hidden="true"
   @attributes=@ExtraParameters
   >
    @icon
</i>
}
else
{
<i data-icon-name=@IconName
   class=@($"ms-Icon{(string.IsNullOrEmpty(IconName) ? " ms-Icon-placeholder" : "")}{(string.IsNullOrEmpty(ClassName) ? "" : " " + ClassName)}")
   style="font-family: FabricMDL2Icons"
   @attributes=@ExtraParameters
   >
    @icon
</i>
}