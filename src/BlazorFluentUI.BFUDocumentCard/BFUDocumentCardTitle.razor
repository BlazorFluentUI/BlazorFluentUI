@namespace BlazorFluentUI
@inherits BFUComponentBase
@using Microsoft.AspNetCore.Components.Web
<BFUGlobalCS Component="this" CreateGlobalCss=@(()=>CreateGlobalCss(Theme)) />

@if (!ShouldTruncate)
{
    <div class="@this.ClassName" title="@Title" style="white-space: nowrap" @ref=RootElementReference>
        @Title
    </div>
}
else if (ShouldTruncate && !string.IsNullOrWhiteSpace(TruncatedTitleFirstPiece) && !string.IsNullOrWhiteSpace(TruncatedTitleSecondPiece))
{
<div class="@this.ClassName" title="@Title" @ref=RootElementReference>
    @TruncatedTitleFirstPiece
    \u2026
    @TruncatedTitleSecondPiece
</div>
}
else
{
    <div class="@this.ClassName" title="@Title" @ref=RootElementReference>
        @Title
    </div> 
}