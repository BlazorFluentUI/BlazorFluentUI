@page "/"
@model HostModel
@namespace FluentUI.Demo.ServerSide.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FluentUI.ServerSide</title>
    <base href="~/" />

    <link href="css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://static2.sharepointonline.com/files/fabric/office-ui-fabric-core/11.0.0/css/fabric.min.css" />
    <link rel="stylesheet" href="css/fabric-icons-inline.css" /> <!--These are icons for nav not automatically included in the above css.-->
    <link rel="stylesheet" href="FluentUI.Demo.ServerSide.styles.css" />

    @if (AppConstants.IS_DEBUG)
    {
        <script src="_content/FluentUI.BaseComponent/FluentUI.js" ></script>
    }
    else
    {
        <script src="_content/FluentUI.BaseComponent/FluentUI.min.js"></script>
    }
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="_content/FluentUI.RichTextEditor/richTextEditor.js"></script>


</head>
<body>
    <app><component type="typeof(FluentUI.Demo.Shared.App)" render-mode="ServerPrerendered" /></app>

    <!-- Polyfill to make server-side work with IE11 -->
    <script type="text/javascript">
        if (/MSIE \d|Trident.*rv:/.test(navigator.userAgent)) {
            document.write('<script src="blazor.polyfill.min.js"><\/script>');
            document.write('<script src="ie11CustomProperties.js"><\/script>');
        }
    </script>
    <script type="text/javascript" src="blazor.polyfill.min.js"></script>


    <script src="_framework/blazor.server.js"></script>
</body>
</html>

