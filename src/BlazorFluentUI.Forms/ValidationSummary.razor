@namespace BlazorFluentUI
@using Microsoft.AspNetCore.Components.Forms
@inherits ValidationSummary

@{ var validationMessages = Model is null ?
                                     BFUCurrentEditContext.GetValidationMessages() :
                                     BFUCurrentEditContext.GetValidationMessages(new FieldIdentifier(Model, string.Empty));

    @if (validationMessages.Count() > 0)
    {
    <div @attributes="AdditionalAttributes"
         class="validation-errors">

        @foreach (var error in validationMessages)
        {
            <BFUMessageBar MessageBarType="MessageBarType.Error" IsMultiline="false">
                <span class="validation-message">@error</span>

            </BFUMessageBar>
        }
    </div>
    }

}

@code {
    [CascadingParameter] EditContext BFUCurrentEditContext { get; set; } = default!;

}
