@namespace BlazorFluentUI
@inherits FluentUIComponentBase

<LocalCS @bind-Rules="@TooltipLocalRules" />

<Callout ClassName=@($"mediumFont fadeIn200 {TooltipRule.Selector.SelectorName} {TooltipAfterRule.Selector.SelectorName} {ClassName}")
         FabricComponentTarget=@FabricComponentTarget
         DirectionalHint=@DirectionalHint
         Style=@($"{Style}")
         BeakWidth=@BeakWidth
         GapSpace="0"
         DoNotLayer="false"
         IsBeakVisible="true">
    <div class="ms-Tooltip-content"
         @onmouseenter=@OnMouseEnter
         @onmouseleave=@OnMouseLeave
         role="tooltip">
        <p class="ms-Tooltip-subtext">
            @ChildContent
        </p>
    </div>
</Callout>
