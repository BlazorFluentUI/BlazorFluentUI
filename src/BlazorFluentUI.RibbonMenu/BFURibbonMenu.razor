@namespace BlazorFluentUI
@inherits BFUComponentBase
@typeparam TItem

@if(@Backstage != null)
{
    <BFURibbonMenuIntern BackstageHeader=@BackstageHeader Backstage=@Backstage @bind-ShowBackstage="ShowBackstage">
        @ChildContent
        @if (Backstage != null)
        {
            <BFUPivotItem HeaderText=@BackstageHeader />
        }
        @if (ItemTemplate != null && ItemsSource != null)
        {
            foreach (var item in ItemsSource)
            {
                @ItemTemplate(item)
            }
        }
    </BFURibbonMenuIntern>
}
else
{
    <BFURibbonMenuIntern>
        @ChildContent
        @if (Backstage != null)
        {
            <BFUPivotItem HeaderText=@BackstageHeader />
        }
        @if (ItemTemplate != null && ItemsSource != null)
        {
            foreach (var item in ItemsSource)
            {
                @ItemTemplate(item)
            }
        }
    </BFURibbonMenuIntern>
}

