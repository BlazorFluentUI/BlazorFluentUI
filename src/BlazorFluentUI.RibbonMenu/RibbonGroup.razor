@using BlazorFluentUI.Models;
@namespace BlazorFluentUI
@inherits BFUComponentBase

<div @ref="RootElementReference" style="display: inline">
    <BFUOverflowSet Items=@((List<IRibbonItem>)items) OverflowItems=@((List<IRibbonItem>)overflowItems) GetKey=@(x => Guid.NewGuid().ToString()) Style="display: inline-block;vertical-align: top">
        <ItemTemplate>
                @ItemTemplate(context)
        </ItemTemplate>
        <OverflowTemplate>
            <BFUCommandBarButton SubordinateItemTemplate=@true HideChevron="true" Style="min-width: 0; padding: 0 4px; align-self: stretch;" IconName="More" MenuItems=@(ItemTransform(context))>
                <MenuItemTemplate Context="overflowItem">
                    @ItemTemplate((IRibbonItem)overflowItem)
                </MenuItemTemplate>
            </BFUCommandBarButton>
        </OverflowTemplate>
    </BFUOverflowSet>
    @if (showDelimiter)
    {
    <div style="display: inline-block; border-left: 1.5px solid lightgrey; height: 32px; margin-top:4px;"></div>
    }
</div>
