
<BFUStack Horizontal="false" VerticalFill="true" Style="overflow:hidden;">
    <BFUStackItem Grow="0" VerticalFill="false" Align="Alignment.Center">
        <div class="top-row">
            <BFULink Href="/">BlazorFluentUI V@(System.Reflection.Assembly.GetAssembly(typeof(BFUComponentBase))?.GetName()?.Version.ToString() ?? "NULL")</BFULink>
        </div>
    </BFUStackItem>

    <BFUStackItem VerticalFill="true" Style="overflow-y:auto;">
        <BFUNav>
            <BFUNavLinkGroup Name="Basic Controls" CollapseByDefault="false">
                @*<BFUNavLink Name="Basic" Url="" Id="" IconName="ButtonControl" OnClick=@OnLinkClicked />*@
                <BFUNavLink Name="Button" Url="buttonsPage" Id="buttonsPage" IconName="ButtonControl" OnClick=@OnLinkClicked />
                <BFUNavLink Name="Checkbox" Url="checkboxPage" Id="checkboxPage" IconName="CheckboxComposite" OnClick=@OnLinkClicked />
                <BFUNavLink Name="ChoiceGroup" Url="choiceGroupPage" Id="choiceGroupPage" IconName="RadioBtnOn" OnClick=@OnLinkClicked />
                <BFUNavLink Name="Dropdown" Url="dropdownPage" Id="dropdownPage" IconName="Dropdown" OnClick=@OnLinkClicked />
                <BFUNavLink Name="Label" Url="labelPage" Id="labelPage" IconName="Label" OnClick=@OnLinkClicked />
                <BFUNavLink Name="Link" Url="linkPage" Id="linkPage" IconName="Link" OnClick="@OnLinkClicked" />
                <BFUNavLink Name="Rating" Url="ratingPage" Id="ratingPage" IconName="FavoriteStar" OnClick=@OnLinkClicked />
                <BFUNavLink Name="Slider" Url="sliderPage" Id="sliderPage" IconName="Slider" OnClick=@OnLinkClicked />
                <BFUNavLink Name="TextField" Url="textFieldPage" Id="textFieldPage" IconName="TextField" OnClick=@OnLinkClicked />
                <BFUNavLink Name="Toggle" Url="togglePage" Id="togglePage" IconName="ToggleLeft" OnClick=@OnLinkClicked />
            </BFUNavLinkGroup>
            <BFUNavLinkGroup Name="Galleries & Pickers" CollapseByDefault="false">
                <BFUNavLink Name="Calendar" Url="calendarPage" Id="calendarPage" IconName="Calendar" OnClick=@OnLinkClicked />
                <BFUNavLink Name="DatePicker" Url="datePickerPage" Id="datePickerPage" IconName="SearchCalendar" OnClick=@OnLinkClicked />
            </BFUNavLinkGroup>
            <BFUNavLinkGroup Name="Items & Lists" CollapseByDefault="false">
                <BFUNavLink Name="List" Url="listPage" Id="listPage" IconName="List" OnClick=@OnLinkClicked />
                <BFUNavLink Name="DetailsList Basic" Url="detailsListPageBasic" Id="detailsListPageBasic" IconName="List" OnClick=@OnLinkClicked />
                <BFUNavLink Name="DetailsList" Url="detailsListPage" Id="detailsListPage" IconName="List" OnClick=@OnLinkClicked />
                <BFUNavLink Name="DetailsListAuto" Url="detailsListAutoPage" Id="detailsListAutoPage" IconName="List" OnClick=@OnLinkClicked />
                <BFUNavLink Name="DetailsList-Grouped"
                            NestedDepth="1"
                            Url="detailsListGroupedPage"
                            Id="detailsListGroupedPage"
                            NavMatchType="NavMatchType.AnchorIncluded" />
                <BFUNavLink Name="DetailsListAuto-Grouped" NestedDepth="1" Url="detailsListAutoGroupedPage" Id="detailsListAutoGroupedPage" IconName="List" OnClick=@OnLinkClicked />
                <BFUNavLink Name="DocumentCard" Url="documentcard" Id="documentcardPage" IconName="ContactCard" OnClick=@OnLinkClicked />
                <BFUNavLink Name="GroupedList" Url="groupedListPage" Id="groupedListPage" IconName="Group" OnClick=@OnLinkClicked />
                <BFUNavLink Name="Persona" Url="personaPage" Id="personaPage" IconName="Contact" OnClick=@OnLinkClicked />
            </BFUNavLinkGroup>
            <BFUNavLinkGroup Name="Commands, Menus & Navs" CollapseByDefault="false">
                <BFUNavLink Name="CommandBar" Url="commandBarPage" Id="commandBarPage" IconName="Bar" OnClick=@OnLinkClicked />
                <BFUNavLink Name="ContextualMenu" Url="contextualMenuPage" Id="contextualMenuPage" IconName="ContextMenu" OnClick=@OnLinkClicked />
                <BFUNavLink Name="Nav" Url="navPage" Id="navPage" IconName="SecondaryNav" OnClick=@OnLinkClicked />
                <BFUNavLink Name="NavBar" Url="navBarPage" Id="navBarPage" IconName="SecondaryNav" OnClick=@OnLinkClicked />
                <BFUNavLink Name="OverflowSet" Url="overflowSetPage" Id="overflowSetPage" IconName="More" OnClick=@OnLinkClicked />
                <BFUNavLink Name="Pivot" Url="pivotPage" Id="pivotPage" IconName="TabCenter" OnClick=@OnLinkClicked />
                <BFUNavLink Name="Ribbon Menu" Url="ribbonMenuPage" Id="ribbonMenuPage" IconName="TabCenter" OnClick=@OnLinkClicked />
            </BFUNavLinkGroup>
            <BFUNavLinkGroup Name="Notification & Engagement" CollapseByDefault="false">
                <BFUNavLink Name="MessageBar" Url="messageBarPage" Id="messageBarPage" IconName="Message" OnClick=@OnLinkClicked />
            </BFUNavLinkGroup>
            <BFUNavLinkGroup Name="Progress" CollapseByDefault="false">
                <BFUNavLink Name="ProgressIndicator" Url="progressIndicatorPage" Id="progressIndicatorPage" IconName="ProgressLoopInner" OnClick=@OnLinkClicked />
                <BFUNavLink Name="Spinner" Url="spinnerPage" Id="spinnerPage" IconName="ProgressRingDots" OnClick=@OnLinkClicked />
            </BFUNavLinkGroup>
            <BFUNavLinkGroup Name="Surfaces" CollapseByDefault="false">
                <BFUNavLink Name="Callout" Url="calloutPage" Id="calloutPage" IconName="TextCallout" OnClick=@OnLinkClicked />
