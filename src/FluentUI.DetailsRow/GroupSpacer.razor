@namespace FluentUI

@if (Count > 0)
{
<span class="ms-GroupSpacer"
      style=@($"display:inline-block;width:{Count*IndentWidth}px;flex-shrink:0;") />
      @*Added flex-shrink:0 for this b/c the container has display:flex instead of display:inline-block*@
}

@code {
    [Parameter] public double IndentWidth { get; set; } = 36;
    [Parameter] public int Count { get; set; }
}
